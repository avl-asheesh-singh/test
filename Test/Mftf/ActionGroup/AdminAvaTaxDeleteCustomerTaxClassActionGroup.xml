<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAvaTaxDeleteCustomerTaxClassActionGroup">
        <annotations>
            <description>Goes to the Customer Tax Class grid page. Filter results based on provided Customer Tax Class Name. Delete Customer Tax Class from grid page.</description>
        </annotations>
        <arguments>
            <argument name="customerTaxClassName" type="string"/>
        </arguments>

        <amOnPage url="{{AdminCustomerTaxClassPage.url}}" stepKey="goToAdminCustomerGroupIndexPage"/>
        <waitForPageLoad time="30" stepKey="waitForCustomerTaxClassPageLoad"/>
        <click selector="{{AdminDataGridHeaderSection.filters}}" stepKey="openFiltersSectionOnCustomerGroupIndexPage"/>
        <conditionalClick selector="{{AdminDataGridHeaderSection.clearFilters}}" dependentSelector="{{AdminDataGridHeaderSection.clearFilters}}" visible="true" stepKey="cleanFiltersIfTheySet"/>

        <conditionalClick selector="{{AdminAvaTaxCustomerTaxClassGridSection.sortDecending}}" dependentSelector="{{AdminAvaTaxCustomerTaxClassGridSection.sortDecending}}" visible="true" stepKey="sortDecending"/>
        
        <click selector="{{AdminAvaTaxCustomerTaxClassGridSection.clickCreatedTaxClass}}" stepKey="selectAndClickRow"/>
        <click selector="{{AdminAvaTaxCustomerTaxClassGridSection.deleteTaxClass}}" stepKey="deleteTaxClassStep"/>
        <waitForElementVisible selector="{{AdminGridConfirmActionSection.message}}" stepKey="waitForConfirmModal"/>
        <click selector="{{AdminAvaTaxCustomerTaxClassGridSection.clickOk}}" stepKey="clickOkToAcceptDeleteTaxClass"/>
        <waitForPageLoad time="30" stepKey="waitForCustomerTaxClassPageLoad2"/>
    </actionGroup>
</actionGroups>
