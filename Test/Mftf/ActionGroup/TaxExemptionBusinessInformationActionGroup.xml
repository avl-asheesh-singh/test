<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="TaxExemptionBusinessInformationActionGroup">
        <annotations>
            <description>Enters Business information for Tax Exemption</description>
        </annotations>
       
        <!-- Fills all the tax information input feilds-->
        <waitForPageLoad time="60" stepKey="wait5678"/>
      
        <waitForElementVisible selector="{{TaxExemptionBusinessInformationSection.nameOfShipper}}" stepKey="waitForNameOfShipperInput"/>
        <fillField selector="{{TaxExemptionBusinessInformationSection.nameOfShipper}}" userInput="Test" stepKey="enterNameOfShipper"/> 
        <fillField selector="{{TaxExemptionBusinessInformationSection.descriptionOfPropertyToBePurchased}}" userInput="Test" stepKey="enterDescriptionOfPropertyToBePurchased"/> 

        <!-- Clicks on Save and Continue button-->
        <click selector="{{TaxExemptionBusinessInformationSection.saveAndContinueBtn}}" stepKey="clickSaveAndContinue"/>
        <waitForPageLoad time="60" stepKey="wait56789"/>
       
    </actionGroup>
</actionGroups>