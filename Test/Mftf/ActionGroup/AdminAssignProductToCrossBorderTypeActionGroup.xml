<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssignProductToCrossBorderTypeGroup">
        <annotations>
            <description>Requires the navigation to the Product page. Opens 'AvaTax' section.</description>
        </annotations>
         <arguments>
            <argument name="country" type="string" defaultValue="Canada"/>
        </arguments>
        <click selector="{{AdminProductAvaTaxSection.avataxToggle}}" stepKey="openProductAvaTaxSection"/>
        <scrollTo selector="{{AdminProductAvaTaxSection.avataxToggle}}" stepKey="scrollToProductAvaTaxSection"/>
        <waitForPageLoad stepKey="waitForLoadingMediaContent"/>
        <waitForElementVisible selector="{{AdminProductAvaTaxSection.avataxCrossborerSelect}}" stepKey="waitForAvataxCrossborerSelect"/>
        <selectOption selector="{{AdminProductAvaTaxSection.avataxCrossborerSelect}}" userInput="{{country}}" stepKey="avataxCrossborerSelect"/>
        <click selector="{{AdminProductFormSection.save}}" stepKey="clickSave"/>
        <waitForPageLoad stepKey="waitForSavingProduct"/>
        <see userInput="You saved the product." selector="{{CatalogProductsSection.messageSuccessSavedProduct}}" stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>