<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
  <actionGroup name="StoreFrontVerifyYourBillingAddressActionGroup">
      <annotations>
        <description>This navigates to the billing address validation popup and clicks on "Save Address" button . After clicking on "Save Address" it navigates to success page</description>
    </annotations>

    <arguments>
      <argument name="orderNumberMessage"/>
      <argument name="emailYouMessage"/>
    </arguments>

   <moveMouseOver selector="{{StoreFrontVerifyYourBillingAddressSection.billingValidationModalHeader" stepKey="moveMouseOverBillingAddressPopUp"/>
    <!-- Verify header-->
    <waitForElementVisible selector="{{StoreFrontVerifyYourBillingAddressSection.billingValidationModalHeader}}" stepKey="verifyMouseOverBillingAddressPopUp"/>
    <!-- Click Save Address button -->
    <click selector="{{StoreFrontVerifyYourBillingAddressSection.saveAddressBillingAddress}}" stepKey="clickSaveAddress"/>

      </actionGroup>
</actionGroups>