<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SelectExposureZonePopUpActionGroup">
        <annotations>
            <description>Select a new state/exposure zone from the drop down menu</description>
        </annotations>
        <arguments>
            <argument name="customerVar" defaultValue="Address_CA"/>
        </arguments>
        
        <selectOption selector="{{SelectExposureZonePopUpSection.state}}" userInput="{{customerVar.state}}" stepKey="selectState"/>
		<click selector="{{SelectExposureZonePopUpSection.proceedButton}}" stepKey="proceedButton"/>
        <waitForPageLoad stepKey="waitForPageToLoad"/>
        </actionGroup>
</actionGroups>
